<!--Saved Articles Page-->
<div class="jumbotron text-center">
            <div class="overlay">
            </div>
            <div class="background-image">

            </div>
            <div class="caption">
            <h1>Saved Articles</h1>
            <h3>Horror's Not Dead</h3>
            </div>
        </div>
<div class="container">
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4>{{this.title}}</h4>
                    </div>
                    <div class="panel-body">
                        <p> {{this.summary}}</p>
                        <a href={{this.link}} target="_blank">{{this.link}}</a>
                        <br><br>
                        <button type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>
